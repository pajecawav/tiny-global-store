{
	"name": "tiny-global-store",
	"version": "0.1.0",
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"typings": "dist/index.d.ts",
	"repository": "https://github.com/pajecawav/tiny-global-store.git",
	"bugs": "https://github.com/pajecawav/tiny-global-store/issues",
	"homepage": "https://github.com/pajecawav/tiny-global-store#readme",
	"files": [
		"dist/*.js",
		"dist/*.js.map",
		"dist/*.d.ts"
	],
	"license": "MIT",
	"scripts": {
		"build": "run-p -l build:*",
		"build:cjs": "npx swc ./src/index.ts -o dist/index.cjs.js -C module.type=commonjs",
		"build:esm": "npx swc ./src/index.ts -o dist/index.esm.js -C module.type=es6 ",
		"build:tsc": "tsc --project tsconfig.build.json",
		"lint": "run-p -l lint:*",
		"lint:tsc": "tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"prepare": "husky install",
		"prepublishOnly": "pnpm lint && pnpm build"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.61",
		"@swc/core": "^1.3.32",
		"@types/react": "^18.0.27",
		"husky": "^8.0.0",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.3",
		"react": "^18.0.0",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"react": "^18.0.0"
	}
}
