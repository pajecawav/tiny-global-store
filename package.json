{
	"name": "tiny-global-store",
	"version": "0.1.1",
	"description": "Tiny state management library for you React application.",
	"keywords": [
		"react",
		"state",
		"manager",
		"management",
		"store"
	],
	"repository": "https://github.com/pajecawav/tiny-global-store.git",
	"bugs": "https://github.com/pajecawav/tiny-global-store/issues",
	"homepage": "https://github.com/pajecawav/tiny-global-store#readme",
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist/*.js",
		"dist/*.mjs",
		"dist/*.js.map",
		"dist/*.mjs.map",
		"dist/*.d.ts"
	],
	"license": "MIT",
	"sideEffects": false,
	"scripts": {
		"build": "run-p -l build:*",
		"build:cjs": "swc ./src/index.ts -o dist/index.cjs.js -C module.type=commonjs",
		"build:esm": "swc ./src/index.ts -o dist/index.esm.js -C module.type=es6 ",
		"build:tsc": "tsc --project tsconfig.build.json",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"lint": "run-p -l lint:*",
		"lint:tsc": "tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"prepare": "husky install",
		"prepublishOnly": "pnpm lint && pnpm build"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.55",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@types/react": "^18.2.0",
		"@vitest/coverage-c8": "^0.30.1",
		"husky": "^8.0.0",
		"jsdom": "^21.1.1",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	}
}
